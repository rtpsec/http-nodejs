// Kelvin will stay constant.  Kelvin is  Today's temp
// https://en.wikipedia.org/wiki/Kelvin
const kelvin = 310
// celsius is 273 less than kelvin
let celsius = kelvin - 273
let fahrenheit = celsius * (9/5) + 32
// rounding down a decimal number.
fahrenheit = Math.floor(fahrenheit)

console.log(kelvin + " in kelvin")
console.log(celsius + " in celsius")
console.log(`The temperature is ${fahrenheit}`)

let newton = celsius * (33/100)
// Temp in Newton
console.log(Math.floor(newton) + `in newton`)
